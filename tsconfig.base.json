{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "module": "CommonJS",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@cw/shared": [
                "shared/src/index.ts"
            ],
            "@cw/shared/*": [
                "shared/src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".serverless"
    ]
}